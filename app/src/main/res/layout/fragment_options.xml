<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Options">


    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="650dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_sell"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/selling" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button_petty_cash"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/petty_cash" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button_receive_stock"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/receive_stock" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button_records"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/records" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button_analysis"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/analysis" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button_customer_management"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/customer_management" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>